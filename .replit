modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "wsgi:app", "--bind=0.0.0.0:5000", "--workers=2", "--timeout=120", "--preload"]

[userenv]

[userenv.shared]

[userenv.development]
WEBAPP_URL = ""

[userenv.production]
WEBAPP_URL = "https://bot-bot--tmcvpgg.replit.app"
